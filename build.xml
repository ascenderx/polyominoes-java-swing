<?xml version="1.0" encoding="UTF-8"?>
<project name="Tiles" default="build" basedir=".">
  <property name="dir.dist" value="dist"/>
  <property name="dir.build" value="build"/>
  <property name="dir.src" value="io/github/ascenderx"/>

  <target name="mkdirs">
    <mkdir dir="${dir.dist}"/>
    <mkdir dir="${dir.build}"/>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="${dir.dist}" includes="**"/>
    </delete>
    <delete>
      <fileset dir="${dir.build}" includes="**"/>
    </delete>
  </target>

  <target name="dist" depends="build">
    <jar basedir="${dir.build}" destfile="${dir.dist}/Tiles.jar">
      <manifest>
        <attribute name="Main-Class" value="io.github.ascenderx.Tiles"/>
      </manifest>
    </jar>
  </target>

  <target name="build">
    <javac srcdir="${dir.src}" destdir="${dir.build}"/>
  </target>
</project>
